<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>medsavant-parent</artifactId>
    <groupId>edu.toronto.cs.medsavant</groupId>
    <version>1.3-SNAPSHOT</version>
    <relativePath>../pom.xml/pom.xml</relativePath>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>medsavant-app-google-genomics</artifactId>
  <name>MedSavant-App - Google</name>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.2</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <minimizeJar>true</minimizeJar>
              <artifactSet>
                <includes>
                  <include>com.google.api-client:google-api-client</include>
                  <include>com.google.api-client:google-api-client-java6</include>
                  <include>com.google.oauth-client:google-oauth-client-java6</include>
                  <include>com.google.oauth-client:google-oauth-client</include>
                  <include>com.google.http-client:google-http-client-jackson2</include>
                  <include>com.google.http-client:google-http-client</include>
                  <include>com.fasterxml.jackson.core:jackson-core</include>
                </includes>
              </artifactSet>
              <relocations>
                <relocation>
                  <pattern>com.google.*</pattern>
                  <shadedPattern>shaded.google.com.google.*</shadedPattern>
                </relocation>
              </relocations>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.3.2</version>
        <configuration>
          <source>1.6</source>
          <target>1.6</target>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>edu.toronto.cs.medsavant</groupId>
      <artifactId>medsavant-shared</artifactId>
      <version>1.3-SNAPSHOT</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>edu.toronto.cs.medsavant</groupId>
      <artifactId>medsavant-client</artifactId>
      <version>1.3-SNAPSHOT</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>edu.toronto.cs.medsavant</groupId>
      <artifactId>medsavant-app-comm</artifactId>
      <version>1.3-SNAPSHOT</version>
      <scope>compile</scope>
    </dependency>
  </dependencies>
</project>

